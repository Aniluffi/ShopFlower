
@{
    ViewBag.Title = "Shop";
}

@model ListProduct

<!--breadcrumbs area start-->
<div class="breadcrumbs_area" style="padding: 100px 0px">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <h3>Shop</h3>
                    <ul>
                        <li><a href="index.html">home</a></li>
                        <li>shop fullwidth</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
  <!--shop  area start-->
<div class="shop_area shop_fullwidth mt-100 mb-100">
    <div class="container">
        <!-- Контейнер для фильтров и магазина -->
        <div class="shop-container">
            <!-- Боковая панель фильтров -->
            <div class="filter">
                <form id="filter-form" method="post">
                    <h3>Фильтр</h3>
                    <div class="price-filter">

                        <span id="adult-min-label">0</span>
                        <label>Минимальная цена:</label>
                        <input type="range" id="adult-min-price" min="0" max="2000" value="2000" />

                        <label>Мaксимальная цена:</label>
                        <input type="range" id="adult-max-price" min="0" max="2000" value="2000" />
                        <span id="adult-max-label">2000</span>

                        <div>Текущее значение <span id="adult-price-values">0 - 2000</span> </div>
                    </div>
                    <div class="filter-button">
                        <button type="button" id="apply-filter">Применить фильтр</button>
                    </div>
                </form>
               
            </div>

            <!-- Контент магазина -->
            <div class="shop-content">
                <div class="shop_toolbar_wrapper" style="justify-content: center;">
                    <div class=" niceselect_option">
                        <form class="select_option" action="#">
                            <select name="orderby" id="short">
                                <option selected value="1">Выберите...</option>
                                <option value="2">Цена по возрастанию</option>
                                <option value="3">Цена по убыванию</option>
                            </select>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <!--shop wrapper start-->
                        <style>
                          .col-lg-3{
                                width: 100%; /* Карточки займут всю доступную ширину в пределах своих ячеек */
                                box-sizing: border-box; /* Учитывает padding в общей ширине карточки */
                          }
                        </style>
                        <div class="shop_wrapper grid_4">
                            <!-- Сюда подгружаются товары -->
                            @if (Model.Products != null && Model.Products.Count != 0)
                            {
                                @foreach (var item in Model.Products)
                                {
                                    <div class="col-lg-3 col-md-4 col-12" onclick="window.location.href = '@Url.Action("ProductDetails","Shop",new {id = item.Id})'">
                                        <article class="single_product">
                                            <figure>
                                                <div class="product_thumb">
                                                    <img src="~/img/product/@item.Img" alt="фото товара">
                                                </div>
                                                <div class="product_content">
                                                    <h4 class="product_name">
                                                        <a href="#">@item.Name</a>
                                                    </h4>
                                                    <div class="price_box">
                                                        <span class="current_price">£@item.Price</span>
                                                    </div>
                                                </div>
                                            </figure>
                                        </article>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="no-products">
                                    <p>Нет товаров</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
