@{
    ViewBag.Title = "Details";
}
@model ShopFlower.Data.Models.Product

<!--product details start-->
<div class="product_details mt-100 mb-100" style="padding-top: 50px">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product-details-tab">
                    <div id="img-1" class="zoomWrapper single-zoom">
                        <a href="#">
                            <img id="zoom1" src="~/img/product/@Model.Img"
                                 data-zoom-image="~/img/product/@Model.Img" alt="big-1">
                        </a>
                    </div>

                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product_d_right">
                    <form action="#">

                        <h1><a href="#">@Model.Name</a></h1>


                        <div class="price_box">
                            <span class="current_price">£@Model.Price</span>
                        </div>
                        <div class="product_desc">
                            <p>
                               @Model.DescriptionShort
                            </p>
                        </div>

                        <div class="product_variant quantity">
                            <label>quantity</label>
                            <input min="1" max="100" value="1" type="number">
                            <button class="button" type="submit">add to cart</button>

                        </div>
                        <div class=" product_d_action">
                            <ul>
                                <li><a href="#" title="Add to wishlist">+ Add to Wishlist</a></li>
                            </ul>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--product details end-->
